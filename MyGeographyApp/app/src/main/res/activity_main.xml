<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800080"
    >

    <TextView
        android:id="@+id/lblQuestion"
        android:text="Is this the flag for Canada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#ff1522"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="160"
        android:layout_height="70"
        android:text="Yes"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#43ff1a" />

        <Button
            android:id="@+id/btnFalse"
            android:layout_width="160"
            android:layout_height="70"
            android:text="No"
            android:textSize="26sp"
            android:padding="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/btnTrue"
            android:layout_toEndOf="@+id/btnTrue"
            android:background="#11fdff" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/switch1"
        android:layout_alignBottom="@+id/btnTrue" />
</RelativeLayout>
