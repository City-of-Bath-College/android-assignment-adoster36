<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B5E20"
    >



    <TextView
        android:id="@+id/lblQuestion"
        android:text="Is this a nissanskylinenismo?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#263238"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#D500F9"


        />
    <ImageView

        android:id="@+id/applepay"
        android:layout_width="260dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nissanskylinenismo"
        />
    <Button
        android:id="@+id/btnTrue"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Yes"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#43ff1a" />
    <Button
        android:id="@+id/btnFalse"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="No"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/btnTrue"
        android:layout_toEndOf="@+id/btnTrue"
        android:background="#8E24AA" />


</RelativeLayout>