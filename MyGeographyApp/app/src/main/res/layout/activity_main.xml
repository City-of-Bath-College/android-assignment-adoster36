<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800080"
    >

    <TextView
        android:id="@+id/lblQuestion"
        android:text="Is this the flag for Canada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#e7edff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />


    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/lblQuestion"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        />

    <Button
        android:id="@+id/btnTrue"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="Yes"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#43ff1a" />

        <Button
            android:id="@+id/btnFalse"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:text="No"
            android:textSize="26sp"
            android:padding="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignTop="@+id/btnTrue"
            android:layout_toEndOf="@+id/btnTrue"
            android:background="#11fdff" />

</RelativeLayout>
