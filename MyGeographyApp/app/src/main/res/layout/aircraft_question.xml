
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    >



    <TextView
        android:id="@+id/lblQuestion"
        android:text="Is this a russian cargo plane?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#CDDC39"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:textColor="#E53935"
        />

        />
    <ImageView

        android:id="@+id/russiancargoplane"
        android:layout_width="260dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/russiancargoplane"
        />
    <Button
        android:id="@+id/btnTrue"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Yes"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#C2185B" />
    <Button
        android:id="@+id/btnFalse"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="No"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/btnTrue"
        android:layout_toEndOf="@+id/btnTrue"
        android:background="#880E4F" />


</RelativeLayout>