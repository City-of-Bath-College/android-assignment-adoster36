<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F06292"

    tools:context="com.question.alexdoster.mygeographyapp.IntroductionActivity">

    <TextView
        android:text="Welcome to my App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:id="@+id/textView2" />
    <ImageView
        android:id="@+id/boeing747"
        android:layout_width="260dp"
        android:layout_height="120dp"
        android:src="@drawable/boeing747"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        />

    <Button
        android:id="@+id/btnabout"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="about me"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#8E24AA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="127dp"
        />

    <Button
        android:id="@+id/btnplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="play"
        android:layout_alignTop="@+id/btnabout"
        android:layout_alignBottom="@+id/btnabout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnabout" />
</RelativeLayout>
