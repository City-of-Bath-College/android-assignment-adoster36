<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    >


    <TextView
        android:id="@+id/lblQuestion"
        android:text="Is this a Mercedes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:background="#FF3D00"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:id="@+id/imgPicture"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/mercedes"
        android:layout_above="@+id/lblQuestion"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        />
    <Button
        android:id="@+id/btnTrue"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="Yes"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/lblQuestion"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="#BF360C"
        />
    <Button
        android:id="@+id/btnFalse"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:text="No"
        android:textSize="26sp"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/btnTrue"
        android:layout_toEndOf="@+id/btnTrue"
        android:background="#FF5722"
        />

</RelativeLayout>
